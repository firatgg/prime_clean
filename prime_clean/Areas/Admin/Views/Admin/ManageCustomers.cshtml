@model IEnumerable<Customer>

<h2>Müşteri Yönetimi</h2>

<table class="table">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Email</th>
            <th>Telefon Numarası</th>
            <th>Adres</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address</td>
                <td>
                    <a asp-action="EditCustomer" asp-route-id="@customer.Id">Düzenle</a> |
                    <a asp-action="DetailsCustomer" asp-route-id="@customer.Id">Detaylar</a> |
                    <a asp-action="DeleteCustomer" asp-route-id="@customer.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateCustomer" class="btn btn-primary">Yeni Müşteri Oluştur</a>
